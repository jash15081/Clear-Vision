<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Date"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_eye_capacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eye Capacity"
        a:layout_constraintTop_toBottomOf="@+id/tv_order_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/cb_order_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Completed"
        app:layout_constraintTop_toBottomOf="@+id/tv_eye_capacity"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cb_payment_pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Pending"
        app:layout_constraintTop_toBottomOf="@+id/cb_order_completed"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
