<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerProfileActivity">

    <!-- Toolbar to hold the menu -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:title="Customer Profile">

    <ImageButton
        android:id="@+id/cancel_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Cancel"
        android:src="@drawable/cancelbutton2"
        app:tint="@android:color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView to hold customer profile information below the toolbar -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Display customer information -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/mobileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/customerIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer ID: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/loyaltyPointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loyalty Points: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/ledgerIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ledger ID: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/outstandingBalanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outstanding Balance: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/leftEyeCapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Eye Capacity: "
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/rightEyeCapacityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Eye Capacity: "
                android:textSize="18sp"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
